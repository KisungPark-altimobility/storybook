{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "emitDeclarationOnly": true,
        "baseUrl": "./src",
        "outDir": "dist",
        "module": "CommonJS",
        "types": ["node", "jest", "@testing-library/jest-dom"]
    },
    "exclude": [
        "**/.next/*",
        "**/app/*",
        "**/stories/*",
        "**/jest.*",
        "**/*.test.tsx",
        "**/*.stories.ts"
    ]
}
